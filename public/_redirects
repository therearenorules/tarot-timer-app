# Netlify redirects for SPA routing
# All routes should redirect to index.html for client-side routing

# API routes (future)
/api/* /api/index.html 200
/auth/* /auth/index.html 200

# Asset redirects with fallbacks
/assets/* /assets/:splat 200
/static/* /static/:splat 200
/images/* /images/:splat 200

# Security redirects - block common attack patterns
/wp-admin/* https://example.com 301!
/wp-login.php https://example.com 301!
/administrator/* https://example.com 301!
/.env* https://example.com 301!
/config/* https://example.com 301!

# Handle legacy URLs
/tarot-reading /tarot 301
/card-reading /tarot 301
/mystical-timer /timer 301

# Catch-all for SPA routing
/* /index.html 200

# 404 fallback
/404 /index.html 200