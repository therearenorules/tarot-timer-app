# Security and performance headers for Netlify/Vercel deployment
/*
  # Security headers
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' ws: wss:; media-src 'self' blob:; worker-src 'self' blob:;
  
  # HTTPS enforcement
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Performance headers
  Cache-Control: public, max-age=31536000, immutable

# API routes (if any)
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
  X-Robots-Tag: noindex

# Static assets
/static/*
  Cache-Control: public, max-age=31536000, immutable
  
/*.js
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript

/*.css  
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css

/*.png
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/png

/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/jpeg

/*.gif
  Cache-Control: public, max-age=31536000, immutable  
  Content-Type: image/gif

/*.svg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/svg+xml

/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff

/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff2